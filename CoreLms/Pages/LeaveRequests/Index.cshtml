@model CoreLms.Pages.LeaveRequests.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Leave Request Action</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].LeaveTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].Requestor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].ApprRejDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].RequestStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRequest[0].NoOfDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveRequest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveTypes.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requestor.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprRejDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfDays)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
