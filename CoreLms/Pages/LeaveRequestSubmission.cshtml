@page
@model LeaveRequestSubmissionModel
@{
}
<br/>
<form method = "post">
      
    <div class="form-group">
        <label asp-for="LeaveRequest.LeaveTypeId" class="control-label"></label>
        <select asp-for="LeaveRequest.LeaveTypeId" class ="form-control" asp-items="ViewBag.LeaveTypeId"></select>
    </div>
    <div class="form-group">
        <label asp-for="LeaveRequest.Reason" class="control-label"></label>
        <input asp-for="LeaveRequest.Reason" class="form-control" />
        <span asp-validation-for="LeaveRequest.Reason" class="text-danger"></span>
    </div>            
    <div class="form-group">
        <label asp-for="LeaveRequest.StartDate" class="control-label"></label>
        <input asp-for="LeaveRequest.StartDate" class="form-control" />
        <span asp-validation-for="LeaveRequest.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeaveRequest.EndDate" class="control-label"></label>
        <input asp-for="LeaveRequest.EndDate" class="form-control" />
        <span asp-validation-for="LeaveRequest.EndDate" class="text-danger"></span>
    </div>
    <input type="hidden" name="LeaveRequest.RequestorId" value="@Model.onid" />

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>
