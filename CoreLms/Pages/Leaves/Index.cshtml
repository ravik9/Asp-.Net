@page
@model CoreLms.Pages.Leaves.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Create New Employee Leave</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Leave[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leave[0].Employee)
            </th>
            <th>
                Employee Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leave[0].LeaveTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Leave[0].Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Leave) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveTypes.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
