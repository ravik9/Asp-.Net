@page
@model CoreLms.Pages.LeaveTypes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Leave Type</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LeaveType.Id" />
            <div class="form-group">
                <label asp-for="LeaveType.Name" class="control-label"></label>
                <input asp-for="LeaveType.Name" class="form-control" />
                <span asp-validation-for="LeaveType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
